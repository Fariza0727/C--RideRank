@model RR.Dto.ResetPasswordDto
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start Breadcrumbs-->
<section class="section parallax-container breadcrumbs-wrap" data-parallax-img="/images/bg-breadcrumbs-1-1920x726.jpg">
    <div class="parallax-content breadcrumbs-custom context-dark">
        <div class="container">
            <h3 class="breadcrumbs-custom-title">Reset Password</h3>
        </div>
    </div>
</section>
<!-- End Breadcrumbs-->
<!-- Section Login/register-->
<section class="section section-variant-1 bg-gray-100">
    <div class="container">
        <div class="row row-50 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-6">
                <div class="card-login-register" id="card-l-r">
                    <div class="card-top-panel">
                        <div class="card-top-panel-left">
                            <h5 class="card-title card-title-login">Reset Password</h5>
                        </div>
                    </div>
                    <div class="card-form card-form-login">
                        <form id="rpForm" asp-action="ResetPassword" asp-controller="Account" method="POST" data-ajax="true" data-ajax-begin="onBegin" data-ajax-complete="onComplete"
                              data-ajax-failure="onFailed" data-ajax-success="onResetSuccess" data-ajax-update="response">
                            <div id="response">
                            </div>
                            @Html.HiddenFor(x=>x.Code)
                            <div class="form-wrap">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-input", autocomplete = "off", placeholder = "Email", @readonly="readonly" })
                                @Html.ValidationMessageFor(x => x.Email)
                            </div>
                            <div class="form-wrap">
                                @Html.PasswordFor(x => x.Password, new { @class = "form-input", autocomplete = "off", placeholder = "Password" })
                                @Html.ValidationMessageFor(x => x.Password)
                            </div>
                            <div class="form-wrap">
                                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-input", autocomplete = "off", placeholder = "Confirm Password" })
                                @Html.ValidationMessageFor(x => x.ConfirmPassword)
                            </div>                            
                            <button class="button button-lg button-dark button-block custom-gold-btn" type="submit">Reset</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

