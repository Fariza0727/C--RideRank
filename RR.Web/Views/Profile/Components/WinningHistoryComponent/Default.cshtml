@model RR.Dto.UserDetailDto
@{

}
<!-- Blog Alise-->
<div class="block-aside">
    <div class="tab-content-main">
        <div class="row row-30">
            <div class="col-lg-12">
                <div class="main-component">
                    <!-- Heading Component-->
                    <article class="heading-component">
                        <div class="heading-component-inner">
                            <h5 class="heading-component-title">Information</h5>
                            <a class="button button-xs button-gray-outline" data-target="#newPassword" data-toggle="modal" href="#"><i class="fa fa-edit"></i> Change Password</a>
                            <a class="button button-xs button-gray-outline" data-target="#editInfoModel" data-toggle="modal" href="#"><i class="fa fa-edit"></i> Edit</a>
                            @if (Model.PlayerType != "PRO PLAYER")
                            {
                                <a class="button button-xs button-gray-outline" data-target="#upgradeSubscription" data-toggle="modal" href="#"><i class="fa fa-edit"></i> Upgrade Your Subscription</a>
                            }
                        </div>
                    </article>
                    <div class="player-info-corporate">
                        <div class="player-info-main">
                            <div class="player-info-table">
                                <div class="table-custom-wrap">
                                    <table class="table-custom">
                                        <tr>
                                            <td class="title-info-th">Full Name - </td>
                                            <td class="title-info-tr">@Model.FirstName @Model.LastName</td>
                                        </tr>
                                        <tr>
                                            <td class="title-info-th">Email Address - </td>
                                            <td class="title-info-tr">@Model.Email</td>
                                        </tr>
                                        <tr>
                                            <td class="title-info-th">Phone Number - </td>
                                            <td class="title-info-tr">@Model.PhoneNumber</td>
                                        </tr>
                                        <tr>
                                            <td class="title-info-th">User Name - </td>
                                            <td class="title-info-tr">@Model.UserName</td>
                                        </tr>
                                        <tr>
                                            <td class="title-info-th">Address - </td>
                                            <td class="title-info-tr">@Model.Address1, @Model.Address2 @Model.Address3</td>
                                        </tr>
                                        <tr>
                                            <td class="title-info-th">State / Province</td>
                                            <td class="title-info-tr">@Model.StateName / @Model.CityName</td>
                                        </tr>
                                        <tr>
                                            <td class="title-info-th">Country</td>
                                            <td class="title-info-tr">@Model.CountryName</td>
                                        </tr>
                                        <tr>
                                            <td class="title-info-th">League Notification</td>
                                            <td class="title-info-tr">@(Model.LeagueNotification ? "Yes" : "No")</td>
                                        </tr>
                                        <tr>
                                            <td class="title-info-th">Profile Type</td>
                                            <td class="title-info-tr">@Model.PlayerType</td>
                                        </tr>
                                        <tr>
                                            <td class="title-info-th">Avatar</td>
                                            <td class="title-info-tr"><img class="info-avatar" src="@Model.Avtar"></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div id="editInfoModel" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Edit Information</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body ">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <form id="frmEditInfo" asp-action="EditInformation" asp-controller="Profile" method="POST" data-ajax="true" data-ajax-update="" data-ajax-begin="onBegin" data-ajax-complete="onComplete"
                                  data-ajax-failure="onFailed" data-ajax-success="onProfileEditSuccess" enctype="multipart/form-data">
                                <div class="row row-10 row-narrow">
                                    <div class="col-md-6">
                                        <div class="form-wrap">
                                            @Html.HiddenFor(x => x.UserId)
                                            @Html.HiddenFor(x => x.IsActive)
                                            @Html.HiddenFor(x => x.IsBlock)
                                            @Html.HiddenFor(x => x.IsDelete)
                                            @Html.HiddenFor(x => x.PlayerType)
                                            <div class="form-group bmd-form-group is-focused">
                                                <label class="bmd-label-floating">First Name</label>
                                                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "Full Name", autocomplete = "off" })
                                                @Html.ValidationMessageFor(x => x.FirstName)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group bmd-form-group is-focused">
                                            <label class="bmd-label-floating">Email</label>
                                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email", autocomplete = "off" })
                                            @Html.ValidationMessageFor(x => x.Email)
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group bmd-form-group is-focused">
                                            <label class="bmd-label-floating">Date of birth</label>
                                            @Html.TextBoxFor(x => x.DOB, new { @class = "form-control", placeholder = "Date of birth", autocomplete = "off" })
                                            @Html.ValidationMessageFor(x => x.DOB)
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group bmd-form-group is-focused">
                                            <label class="bmd-label-floating">UserName</label>
                                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "UserName", autocomplete = "off" })
                                            @Html.ValidationMessageFor(x => x.UserName)
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group bmd-form-group is-focused">
                                            <label class="bmd-label-floating">Phone Number</label>
                                            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", placeholder = "Phone Number", autocomplete = "off" })
                                            @Html.ValidationMessageFor(x => x.PhoneNumber)
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group bmd-form-group is-focused">
                                            <label class="bmd-label-floating">Address Line1</label>
                                            @Html.TextBoxFor(x => x.Address1, new { @class = "form-control", placeholder = "Addess Line1", autocomplete = "off" })
                                            @Html.ValidationMessageFor(x => x.Address1)
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group bmd-form-group is-focused">
                                            <label class="bmd-label-floating">Address Line2</label>
                                            @Html.TextBoxFor(x => x.Address2, new { @class = "form-control", placeholder = "Address Line2", autocomplete = "off" })
                                            @Html.ValidationMessageFor(x => x.Address2)
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group bmd-form-group is-focused">
                                            <label class="bmd-label-floating">Address Line3</label>
                                            @Html.TextBoxFor(x => x.Address3, new { @class = "form-control", placeholder = "Address Line3", autocomplete = "off" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group bmd-form-group is-focused">
                                            <label class="bmd-label-floating">Country</label>
                                            @Html.DropDownListFor(x => x.Country, Model.CountryList, new { @class = "form-control", onchange = "return loadStates()" })
                                            @Html.ValidationMessageFor(x => x.Country)
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group bmd-form-group is-focused">
                                            <label class="bmd-label-floating">State</label>
                                            @Html.DropDownListFor(x => x.State, Model.StateList, new { @class = "form-control", onchange = "return loadCity()" })
                                            @Html.ValidationMessageFor(x => x.State)
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group bmd-form-group is-focused">
                                            <label class="bmd-label-floating">City</label>
                                            @Html.DropDownListFor(x => x.City, Model.CityList, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(x => x.City)
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group bmd-form-group is-focused">
                                            <label class="bmd-label-floating">Profile Type</label>
                                            @Html.DropDownListFor(x => x.PlayerTypeId, Model.PlayerTypeList, new { @class = "form-control", onchange = "return loadCity()" })
                                            @Html.ValidationMessageFor(x => x.PlayerTypeId)
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="owl-carousel-outer-navigation">
                                            <!-- Heading Component-->
                                            <article class="heading-component">
                                                <div class="heading-component-inner">
                                                    <h5 class="custom-select-avatar text-transform-none">Select Avatar</h5>

                                                </div>
                                            </article>
                                            <!-- Owl Carousel-->
                                            <div class="owl-spacing-1 owl-loaded" data-items="1" data-autoplay="true" data-autoplay-speed="4000" data-dots="false" data-nav="true" data-stage-padding="0" data-loop="false" data-margin="30" data-mouse-drag="false" data-nav-custom=".owl-carousel-outer-navigation">
                                                <div class="owl-stage-outer">
                                                    <div class="owl-stage">
                                                        <div class="owl-item cloned" style="width: 495px; margin-right: 30px;">
                                                            <article class="custom-avatar">
                                                                <figure class="text-center">
                                                                    <img class="avatar-img" src="@Model.Avtar" alt="" width="91" height="91">
                                                                    <i class="fa fa-camera upload-button"></i>
                                                                    <input class="file-upload" name="file" type="file" accept="image/*">
                                                                </figure>
                                                            </article>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group bmd-form-group is-focused form-wrap mt-19">
                                            <label class="checkbox-inline custom-inline-checkbox-top checkbox-inline-lg checkbox-light">
                                                @Html.CheckBoxFor(x => x.LeagueNotification)League Notification
                                            </label> 
                                        </div>
                                    </div> 

                                    <div class="col-md-12 text-right">
                                        <button class="btn button button-xs button-gray-outline" type="submit">Save</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="newPassword" role="dialog">
    <div class="modal-dialog" style="top:20%">

        <!-- Modal content-->
        <div class="modal-content">
            <div id="fpRespone"></div>
            <div id="fpBody">
                <div class="modal-header">
                    <span style="float:right">
                        Change Password
                        <i class="material-icons" data-dismiss="modal">
                            close
                        </i>
                    </span>
                </div>
                <div class="modal-body _body">
                    <form id="fpForm" asp-action="ChangePassword" asp-controller="Account" method="POST" data-ajax="true" data-ajax-begin="onBegin" data-ajax-complete="onComplete"
                          data-ajax-failure="onFailed" data-ajax-success="onChangePasswordSuccess" data-ajax-update="fpRespone">
                        <div class="form-wrap">
                            @Html.HiddenFor(x => x.Email)
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-input", autocomplete = "off", placeholder = "New Password" })
                            @Html.ValidationMessageFor(x => x.Password)
                        </div>
                        <div class="form-wrap">
                            @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-input", autocomplete = "off", placeholder = "Confirm Password" })
                            @Html.ValidationMessageFor(x => x.ConfirmPassword)
                        </div>
                        <button class="button button-lg button-dark button-block custom-gold-btn" type="submit">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="upgradeSubscription" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Upgrade Subscription</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body ">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div id="fpRespone"></div>
                            <div id="fpBody">
                                <form id="fpForm" asp-action="Subscription" asp-controller="Transaction" method="POST" enctype="multipart/form-data" onsubmit="return ConfirmPayment(this)">
                                    <div class="panel panel-default">
                                        <div class="panel-body">
                                            <div class="text-center">

                                                <div class="panel-body mt-40">

                                                    <div class="one-sec col-md-12 text-left">
                                                        <input type="hidden" id="isUpgrade" value="true" name="isUpgrade" />
                                                        @if (Model.PlayerType == "NOVICE PLAYER")
                                                        {

                                                            <div class="col-md-12">
                                                                <div class="form-wrap">
                                                                    <strong> Intermediate Player:</strong>
                                                                    <p class="become-player-box"><input class="become-a-player-input" type="radio" id="Amount" name="Amount" value="200" />YEARLY SUBSCRIPTION PLAN</p>
                                                                    <span class="list-statictics-counter">$200</span>
                                                                    <p class="become-player-box"><input class="become-a-player-input" type="radio" id="Amount" name="Amount" value="55" />QUARTERLY SUBSCRIPTION PLAN</p>
                                                                    <span class="list-statictics-counter">$55</span>
                                                                </div>
                                                            </div>

                                                            <br />

                                                            <div class="col-md-12">
                                                                <div class="form-wrap">
                                                                    <div class="name-amount"><strong>Pro Player:</strong> <span class="list-statictics-counter">$50</span></div>
                                                                    <p class="become-player-box"><input class="become-a-player-input" type="radio" id="Amount" name="Amount" value="50" />YEARLY SUBSCRIPTION PLAN</p>

                                                                </div>
                                                            </div>
                                                            <br />
                                                        }
                                                        else
                                                        {
                                                            <div class="col-md-12">
                                                                <div class="form-wrap">
                                                                    <div class="name-amount"><strong>Pro Player:</strong><span class="list-statictics-counter">$50</span></div>
                                                                    <p class="become-player-box"><input class="become-a-player-input" type="radio" id="Amount" name="Amount" value="50" />YEARLY SUBSCRIPTION PLAN</p>

                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                    <div class="modal-footer border-0">
                                                        <div class="text-center">
                                                            <input class="btn button button-xs button-gray-outline modal-golden-btn" type="submit" value="Save" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                         
                                        </div>
                                        
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}