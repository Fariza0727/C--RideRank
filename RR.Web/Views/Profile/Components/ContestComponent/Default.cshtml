@model IEnumerable<RR.Dto.UserContestLiteDto>
@{

}
<!-- Blog Alise-->
<div class="block-aside">
    <div class="tab-content-main">
        <div class="row row-30">
            <div class="col-lg-12">
                <div class="main-component">
                    <div class="player-info-corporate">
                        <div class="player-info-main" style="width:100%">
                            <div class="player-info-table">
                                <div class="custom-account-pad mt-0">
                                    
                                        <div class="card-standing card-group-custom card-standing-index" id="accordion1" role="tablist" aria-multiselectable="false">
                                            <div class="table-responsive">
                                                <table class="table table-striped table-bordered dt-responsive nowrap table-custom table-product custom-table-product" width="100%">
                                                    <thead class="theme-dark-th">
                                                        <tr>
                                                            <th>Team</th>
                                                            <th>Event Name</th>
                                                            <th>Joining Fees</th>
                                                            <th>Joining Date</th>
                                                            <th>Team Points</th>
                                                            <th>Detail</th>
                                                        </tr>
                                                    </thead>
                                                    @if (Model != null && Model.Count() > 0)
                                                    {
                                                        var upcomingEvents = Model.Where(x => x.EventStatus == "Upcoming");
                                                        var completedEvents = Model.Where(x => x.EventStatus == "Completed");


                                                        <tbody>

                                                            @if (upcomingEvents != null && upcomingEvents.Count() > 0)
                                                            {
                                                                <tr><td colspan="6" align="center" class="contest-status-head"><h5 class="heading-component-title "> Upcoming Event </h5></td></tr>
                                                            }
                                                            @foreach (var item in upcomingEvents)
                                                            {
                                                                <tr>
                                                                    <td>
                                                                        @if (!string.IsNullOrEmpty(item.Avtar))
                                                                        {

                                                                            if (item.Avtar.ToLower().Contains("/images/"))
                                                                            {
                                                                                <img width="46" height="36" src="@item.Avtar" onerror="this.onerror=null;this.src='RR/user-n.png';">
                                                                            }
                                                                            else
                                                                            {
                                                                                <img width="46" height="36" src="/images/profilePicture/@item.Avtar" onerror="this.onerror=null;this.src='RR/user-n.png';">
                                                                            }
                                                                        }
                                                                        else
                                                                        {
                                                                            <img width="46" height="36" src="images/team-rogers-46x36.png" onerror="this.onerror=null;this.src='images/RR/user-n.png';">
                                                                        }
                                                                        @item.TeamName
                                                                    </td>
                                                                    <td><span class="shotitle">@item.ContestName</span></td>
                                                                    <td>@string.Concat("C", item.JoiningFee)</td>
                                                                    <td>@item.JoiningDate.ToString("dd MMM yyyy")</td>
                                                                    <td>@item.TeamPoint </td>
                                                                    <td>
                                                                        <a href="/usercontest/@item.UserId/@item.ContestId/@item.TeamId" class="button button-primary mt-0 join-contest-button button-color-light-brown">
                                                                            <i class="fa fa-eye" aria-hidden="true"></i>
                                                                        </a>
                                                                        <a href="/team-formation/@item.ContestId/@item.EventId/@item.TeamId" title="Edit Team" class="button button-primary mt-0 join-contest-button button-color-light-brown">
                                                                            <i class="fa fa-pencil" aria-hidden="true"></i>
                                                                        </a>
                                                                    </td>
                                                                </tr>
                                                            }

                                                            @if (completedEvents != null && completedEvents.Count() > 0)
                                                            {
                                                                <tr><td colspan="6" align="center" class="contest-status-head"> <h5 class="heading-component-title">Completed Event </h5></td></tr>
                                                            }
                                                            @foreach (var item in completedEvents)
                                                            {
                                                                <tr>
                                                                    <td>
                                                                        @if (!string.IsNullOrEmpty(item.Avtar))
                                                                        {

                                                                            if (item.Avtar.ToLower().Contains("/images/"))
                                                                            {
                                                                                <img width="46" height="36" src="@item.Avtar" onerror="this.onerror=null;this.src='RR/user-n.png';">
                                                                            }
                                                                            else
                                                                            {
                                                                                <img width="46" height="36" src="/images/profilePicture/@item.Avtar" onerror="this.onerror=null;this.src='RR/user-n.png';">
                                                                            }
                                                                        }
                                                                        else
                                                                        {
                                                                            <img width="46" height="36" src="images/team-rogers-46x36.png" onerror="this.onerror=null;this.src='RR/user-n.png';">
                                                                        }
                                                                        @item.TeamName
                                                                    </td>
                                                                    <td><span class="shotitle">@item.ContestName</span></td>
                                                                    <td>@item.JoiningFee</td>
                                                                    <td>@item.JoiningDate.ToString("dd MMM yyyy")</td>
                                                                    <td>@item.TeamPoint </td>
                                                                    <td>
                                                                        <a href="/usercontest/@item.UserId/@item.ContestId/@item.TeamId" class="button button-primary mt-0 join-contest-button button-color-light-brown">
                                                                            <i class="fa fa-eye" aria-hidden="true"></i>
                                                                        </a>
                                                                    </td>
                                                                </tr>
                                                            }

                                                        </tbody>

                                                    }
                                                    else
                                                    {
                                                        <tbody>
                                                            <tr>
                                                                <td colspan="6" align="center">
                                                                    No Record Found
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    }
                                                </table>
                                            </div>


                                        </div>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 

  