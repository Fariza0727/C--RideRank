@section Scripts{
    <script src="~/js/multislider.min.js"></script>
    <script>
        function setCookie(cname, cvalue, exdays) {
            var d = new Date();
            d.setTime(d.getTime() + (exdays * 24 * 60 * 60 * 1000));
            var expires = "expires=" + d.toUTCString();
            document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/";
        }
        $(".a_href").on('click', function () {
            var value_ = $(this).data('href');
            setCookie("username", value_, 1);
            location.href = "/events";
        });
        $('#exampleSlider').multislider({
            interval: 0,
            slideAll: true,
            duration: 1500
        });
        $(function () {
            $.get("home/last-event-standing-freeplay-component?count=5", function (data) {
                $('#Img-LastEventStandingFreePlayComponent').remove();
                $('#LastEventStandingFreePlayComponent').html(data);
            });
        });

        $(function () {
            $.get("home/playoff-standings-component", function (data) {
                $('#Img-PlayOffStandingsComponent').remove();
                $('#PlayOffStandingsComponent').html(data);
            });
        });

        $(function () {
            $.get("home/home-page-upcoming-event-component", function (data) {
                $('#Img-HomePageUpcomingEventComponent').remove();
                $('#HomePageUpcomingEventComponent').html(data);
            });
        });
        $(function () {
            $.get("home/home-page-top-referral-component", function (data) {
                $('#HomeTopReferral').html(data);
            });
        });
        $(".arr_jackpot_rule").on("click", function () {

            $("#div_collapse_jackpot").toggle();
            var arr_elem = $(this);

            if (arr_elem.hasClass('fa-angle-right')) {
                arr_elem.removeClass('fa-angle-right');
                arr_elem.addClass('fa-angle-down');
            } else {
                arr_elem.removeClass('fa-angle-down');
                arr_elem.addClass('fa-angle-right');
            }
        });

        $(".arr_reward_rule").on("click", function () {

            $(".div_collapse_reward").toggle();
            var arr_elem = $(this);

            if (arr_elem.hasClass('fa-angle-right')) {
                arr_elem.removeClass('fa-angle-right');
                arr_elem.addClass('fa-angle-down');
            } else {
                arr_elem.removeClass('fa-angle-down');
                arr_elem.addClass('fa-angle-right');
            }
        });
    </script>
