@model IEnumerable<RR.Dto.PlayStandingLiteDto>
@{
}

<div class="main-component">
    <!-- Heading Component-->
    <article class="heading-component">
        <div class="heading-component-inner">
            <h5 class="heading-component-title">
                CURRENT STANDINGS
            </h5>
            @using (Html.BeginForm("YearStandings", "ContestStanding", FormMethod.Post, new { style = "display: inline-block;float: right;" }))
            {
                <button type="submit" class="button button-xs button-gray-outline">See all Standings</button>
            }
        </div>
    </article>
    <div class="card-standing card-group-custom card-standing-index">
        <table class="table-custom table-standings table-classic table-dark dataTable no-footer table responsive_dataTable dt-responsive nowrap" id="userDataTable" role="grid" aria-describedby="userDataTable_info">
            <thead class="card-standing-caption">

                <tr role="row">


                    <th>Team</th>
                    <th>Points</th>
                    <th>Rank</th>

                </tr>
            </thead>
            @if (Model != null && Model.Count() > 0)
            {
            <tbody>
                @foreach (var item in Model)
                {

                <tr role="row" class="odd">

                    <td class="card-standing-team-name sorting_1 table-team-name" style="width: 257px;"><span>
    @if (!string.IsNullOrEmpty(item.UserPic))
    {

        if (item.UserPic.ToLower().Contains("/images/"))
        {
            <img width="46" height="36" src="@item.UserPic" onerror="this.onerror=null;this.src='images/team-rogers-46x36.png';">
        }
        else
        {
            <img width="46" height="36" src="/images/profilePicture/@item.UserPic" onerror="this.onerror=null;this.src='images/team-rogers-46x36.png';">
        }
    }
    else
    {
        <img width="46" height="36" src="images/team-rogers-46x36.png" onerror="this.onerror=null;this.src='images/team-rogers-46x36.png';">
    }
                    @item.UserName
                </span></td>
                    <td class="card-standing-team sorting_1">@item.TeamPoint</td>
                    <td class="card-standing-number">@item.Rank</td>
                </tr>

                }
            </tbody>
            }

        </table>
    </div>






