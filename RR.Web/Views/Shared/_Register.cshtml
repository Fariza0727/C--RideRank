    <div class="form-wrap">
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-input", autocomplete = "off", placeholder = "User Name" })
        @Html.ValidationMessageFor(x => x.UserName)
    </div>
    <div class="form-wrap">
        @Html.TextBoxFor(x => x.FullName, new { @class = "form-input", autocomplete = "off", placeholder = "Full Name" })
        @Html.ValidationMessageFor(x => x.FullName)
    </div>
    <div class="form-wrap">
        @Html.TextBoxFor(x => x.Email, new { @class = "form-input", autocomplete = "off", placeholder = "Email" })
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-wrap">
        @Html.PasswordFor(x => x.Password, new { @class = "form-input", autocomplete = "off", placeholder = "Password" })
