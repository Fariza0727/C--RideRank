@model RR.Dto.RegisterDto

<form asp-action="Register" asp-controller="Account" method="POST" data-ajax="true" data-ajax-update="" data-ajax-begin="onBegin" data-ajax-complete="onComplete"
    data-ajax-failure="onFailed" data-ajax-success="onSuccess">
    @*@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { area = "" }))
