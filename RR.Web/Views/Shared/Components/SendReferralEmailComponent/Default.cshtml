@model RR.Dto.ReferralDto

<form class="rd-form" asp-action="SendReferralEmail" asp-controller="Account" id="sendReferralForm" method="POST" data-ajax="true" data-ajax-begin="onBeginReferral" data-ajax-complete="onCompleteReferral"
      data-ajax-failure="onFailedReferral" data-ajax-success="onSuccessReferral" data-ajax-update="response">
    <div class="form-wrap">
        <span class="share_label">Friend Name</span>
    </div>
    <div class="form-wrap  mt-1">
        @Html.TextBoxFor(x => x.FriendName, new { @class = "form-input", autocomplete = "off" })
        @Html.ValidationMessageFor(x => x.FriendName)
    </div>
    <div class="form-wrap">
        <span class="share_label">Friend Email</span>
    </div>
    <div class="form-wrap mt-1">
        @Html.TextBoxFor(x => x.Email, new { @class = "form-input", autocomplete = "off" })
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <button class="button button-lg button-dark button-block share_send_btn" type="submit">Send</button>
</form>
                