@model Tuple<IEnumerable<RR.Dto.PointTableDto>, int>

@if (Model.Item1.Count() > 0)
{
    
           
                <div class="col-12">
                    <div>  @*class="homeNews-feed-head"*@
                        <article class="heading-component">
                            <div class="heading-component-inner">
                                <h5 class="heading-component-title">Point Table</h5>
                            </div>
                        </article>
                    </div>
                </div>
            


            <div class="row mt-0">
                <div class="col-lg-12 custom-bg-gray-100 custom-float-width pad30">

                    @if (Model.Item1.Where(x => x.PointForValue == "Rider").Count() > 0)
                    {
                        <article class="card card-custom pl-0">
                            <div class="card-header" id="accordion1Heading1" role="tab">
                                <div class="card-standing-team-item point-table">
                                    <div class="width100 text-left question">Rider Points</div>
                                    <div class="card-standing-button"><a class="card-standing-toogle material-icons-remove collapsed" role="button" data-toggle="collapse" data-parent="#accordion1" href="#accordion1Collapse1" aria-controls="accordion1Collapse1"></a></div>
                                </div>
                            </div>
                            <div class="collapse" id="accordion1Collapse1" role="tabpanel" aria-labelledby="accordion1Heading1">
                                <div class="card-body">

                                    <table class="table table-striped table-bordered dt-responsive nowrap" id="userDataTable">
                                        <tbody>
                                            @foreach (var item in Model.Item1.Where(x => x.PointForValue == "Rider"))
                                            {
                                                <tr>
                                                    <td>@item.Key</td>
                                                    <td>
                                                        @if (item.Value.Contains("<br>"))
                                                        {
                                                            <label>
                                                                @Html.Raw(item.Value)
                                                            </label>
                                                        }
                                                        else
                                                        {
                                                            <label>@item.Value</label>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </article>
                    }
                    @if (Model.Item1.Where(x => x.PointForValue == "Bull").Count() > 0)
                    {
                        <article class="card card-custom pl-0">
                            <div class="card-header" id="accordion1Heading2" role="tab">
                                <div class="card-standing-team-item point-table">
                                    <div class="width100 text-left question">Bull Points</div>
                                    <div class="card-standing-button"><a class="card-standing-toogle material-icons-remove collapsed" role="button" data-toggle="collapse" data-parent="#accordion1" href="#accordion1Collapse2" aria-controls="accordion1Collapse2"></a></div>
                                </div>
                            </div>
                            <div class="show" id="accordion1Collapse2" role="tabpanel" aria-labelledby="accordion1Heading2">
                                <div class="card-body">

                                    <table class="table table-striped table-bordered dt-responsive nowrap" id="userDataTable">
                                        <tbody>
                                            @foreach (var item in Model.Item1.Where(x => x.PointForValue == "Bull"))
                                            {
                                                <tr>
                                                    <td>@item.Key</td>
                                                    <td>
                                                        @if (item.Value.Contains("<br>"))
                                                        {
                                                            <label>
                                                                @Html.Raw(item.Value)
                                                            </label>
                                                        }
                                                        else
                                                        {
                                                            <label>@item.Value</label>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </article>
                    }
                </div>
                <div class="clearfix"></div>
            </div>
        
}