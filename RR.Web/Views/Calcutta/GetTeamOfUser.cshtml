@model IEnumerable<RR.Dto.Calcutta.PickEntryLiteDto>
@{
    ViewData["Title"] = "History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <link href="~/css/newdesign.css" rel="stylesheet" />
    <script src="~/js/core.min.js" type="text/javascript"></script>
    
}

<section class="section section-variant-1 team_selection custom-float-width" style="background:#C4C4C4;">
    <div class="container">
        <div class="row">
            <div class="col-lg-2 col-md-2 col-sm-1">
                <b class="btn rank-btn-back" onclick="history.back();">
                    <i class="fa fa-chevron-left" aria-hidden="true"></i>
                </b>
                <span class="rank-back-span">Back</span>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-11 text-center">
                <span class="et_detail_title">Contest Detail</span>
                <p class="et_placed">Position @ViewBag.Position out of @ViewBag.NumberOfEntries Entries</p>
            </div>
            <div class="col-lg-2 col-md-2">

            </div>
        </div>
        <div class="row mt-4">
            <div class="col-lg-3 col-5">
                <span class="rank-info-title">Team:</span><br />
                <span class="rank-name">@ViewBag.TeamName</span>
            </div>
            
            <div class="col-lg-2 col-4">
                <span class="rank-info-title">Team Points:</span><br />
                <span class="rank-name">@ViewBag.TeamPoint</span>
            </div>
            <div class="col-lg-3 col-12">
                <span class="rank-info-title">Joining Date:</span><br />
                <span class="rank-name">@ViewBag.JoinDate</span>
            </div>
            <div class="col-lg-4 col-12">
                <span class="rank-info-title">Event:</span><br />
                <span class="rank-name">@ViewBag.EventName</span>
            </div>
        </div>
        <div class="row mt-3">
            
            <div class="et_desktop col-12">
                <span class="et_detail_info">Selected Bulls</span>
            </div>
            @foreach (var item in Model.OrderByDescending(d => d.CompetitorPoint))
            {
                <div class="col-lg-4">
                    <div class="card et_detail_card w-100" style="min-height: 70px;">
                        <div class="row">
                            <div class="col-3 px-1">
                                <img src="/images/home/Bull-logo.png" width="70" height="70" />
                            </div>
                            <div class="col-9 px-1">
                                <span class="rank-name">@item.CompetitorName</span><br /><br />
                                <span class="mt-3 et_point">Total Point: @item.CompetitorPoint </span>
                            </div>
                            
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<partial name="../Shared/_Sponsors.cshtml" />
@await Component.InvokeAsync("SubscibeNewsLetterComponent")
@section Scripts{
    <script>
        $(function () {

            

        });


    </script>
}