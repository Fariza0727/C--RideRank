@model Tuple<DateTime, List<LogResponse>>


<link href="~/css/dataTables.bootstrap.min.css" rel="stylesheet" />

<div class="card">
    <div class="card-header card-header-warning">
        <h4 class="card-title">
            Log Report
            <small><input type="date" name="date" onchange="setLogTable(this, this.value)" /></small>
        </h4>
        <p class="card-category" id="logreportdate">Report on @Model.Item1.ToLongDateString()</p>
    </div>
    <div class="card-body table-responsive">
        <table class="table table-striped table-bordered" id="logDataTable">
            <thead class="text-warning">
                <tr>
                    <th>ID</th>
                    <th>User</th>
                    <th width="180">Date</th>
                    <th>Level</th>
                    <th>Message</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>


<div class="modal fade" id="logModal" role="dialog">
    <div class="modal-dialog" style="top:20%">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" style="float:left">
                    Log Detail  <span class="pull-right">
                        <i class="material-icons" data-dismiss="modal">
                            close
                        </i>
                    </span>
                </h4>

            </div>
            <div class="modal-body">
                
            </div>
        </div>
    </div>
</div>

